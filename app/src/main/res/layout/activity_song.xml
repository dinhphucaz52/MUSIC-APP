<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".presentation.activity.SongActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_ic_song"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:fontFamily="@font/utm_bebas"
        android:text="NO SONG FOUND"
        android:textColor="@color/icon_color"
        android:textSize="26sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/imageView"
        android:fontFamily="@font/inter_semibold"
        android:text="03:50"
        android:textColor="@color/icon_color"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="80dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_loop"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/loop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_previous"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/notification_ic_prev"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/notification_ic_pause"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/notification_ic_next"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_shuffle"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/repeat"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>